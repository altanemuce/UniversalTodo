@model Entities.Concrete.Todo
@{
    Layout = "~/Views/Shared/_Todo.cshtml";
}

<div class="row">

    <div class="col-lg-12 col-xlg-9 col-md-12">
        <div class="card">
            <div class="card-body">
                <form class="form-horizontal form-material" method="post">
                    <div class="form-group mb-4">
                        <label class="col-md-12 p-0">Görev Başlığı</label>
                        <div class="col-md-12 border-bottom p-0">
                            <input type="text" placeholder="Başlık" name="Title"
                                   class="form-control p-0 border-0">
                        </div>
                    </div>



                    <div class="form-group mb-4">
                        <label class="col-md-12 p-0">Açıklama</label>
                        <div class="col-md-12 border-bottom p-0">
                            <textarea rows="5" class="form-control p-0 border-0" name="Content"></textarea>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <div class="col-sm-12">
                            <button class="btn btn-success">Görevi Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>